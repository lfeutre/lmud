{erl_opts, [
   debug_info,
   {i,"_build/default/lib"},
   {i, "./apps"}
]}.

{lfe_opts, [
   {i,"_build/default/lib"},
   {i, "./apps"}
]}.

{deps, [
   {lfe, "2.0.1"},
   {lutil, "0.13.0"},
   {logjam, "1.0.5"},
   {mud_parser, {git, "https://github.com/lfex/mud_parser.git", {tag, "0.2.1"}}},
   {color, {git, "https://github.com/julianduque/erlang-color.git", {tag, "v1.0.0"}}},
   {proper, "1.4.0"}
  ]}.

{plugins, [
    {rebar3_lfe, "0.3.2"}
]}.

{provider_hooks, [
    {pre, [
        {compile, {lfe, compile}}
    ]}
]}.

{relx, [
    {release, {'lmud', "0.5.0-dev"}, [
        lmud,
        lfe,
        logjam,
        sasl,
        mudstore,
        filestore
    ]},

    {sys_config, "./config/sys.config"},
    {vm_args, "./config/vm.args"},

    {dev_mode, true},
    {include_erts, false},

    {extended_start_script, true},

    {overlay, [{copy, "data", "data"}]}
]}.

{xref_checks, [
    undefined_function_calls, undefined_functions, locals_not_used,
    deprecated_function_calls, deprecated_functions
]}.

{dialyzer, [
    {warnings, [unknown]}
]}.

{profiles, [
    {test, [
        {deps, [
            {proper, "1.3.0"},
            {ltest, "0.13.1"}
        ]},
        {plugins, [
            {rebar3_proper, "0.12.1"}
        ]},
        {eunit_opts, [verbose]},
        {erl_opts, [
            {src_dirs, ["src", "test"]}
        ]}
    ]}
]}.

{alias, [
    {coverage, [
        {proper, "-c"},
        {cover, "-v --min_coverage=0"}
    ]},
    {test, [{lfe, "ltest -tall"}]},
    {check, [
        compile,
        xref,
        %dialyzer,
        {lfe, "ltest -tall"},
        coverage
    ]}
]}.